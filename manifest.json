      "type": "image/png",
      "form_factor": "narrow",
      "label": "Tableau de bord"
    },
    {
      "src": "/screenshots/notes.png",
      "sizes": "1080x1920",
      "type": "image/png",
      "form_factor": "narrow",
      "label": "Notes et cotes"
    },
    {
      "src": "/screenshots/communiques.png",
      "sizes": "1080x1920",
      "type": "image/png",
      "form_factor": "narrow",
      "label": "Communiqués"
    }
  ],
  
  "shortcuts": [
    {
      "name": "Tableau de bord",
      "short_name": "Dashboard",
      "description": "Accéder au tableau de bord",
      "url": "/index.html?page=dashboard",
      "icons": [{ "src": "/icon-96x96.png", "sizes": "96x96" }]
    },
    {
      "name": "Notes et cotes",
      "short_name": "Notes",
      "description": "Consulter les notes des enfants",
      "url": "/index.html?page=grades",
      "icons": [{ "src": "/icon-96x96.png", "sizes": "96x96" }]
    },
    {
      "name": "Communiqués",
      "short_name": "Communiqués",
      "description": "Voir les communiqués de paiement",
      "url": "/index.html?page=communiques",
      "icons": [{ "src": "/icon-96x96.png", "sizes": "96x96" }]
    },
    {
      "name": "Notifications",
      "short_name": "Alertes",
      "description": "Voir les notifications",
      "url": "/index.html?page=notifications",
      "icons": [{ "src": "/icon-96x96.png", "sizes": "96x96" }]
    }
  ],
  
  "protocol_handlers": [
    {
      "protocol": "web+cslacolombe",
      "url": "/index.html?url=%s"
    }
  ],
  
  "share_target": {
    "action": "/index.html",
    "method": "GET",
    "enctype": "application/x-www-form-urlencoded",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url"
    }
  },
  
  "launch_handler": {
    "client_mode": "focus-existing"
  },
  
  "file_handlers": [
    {
      "action": "/parent.html",
      "accept": {
        "application/pdf": [".pdf"],
        "image/*": [".jpg", ".jpeg", ".png", ".gif"]
      }
    }
  ],
  
  "display_override": ["window-controls-overlay", "minimal-ui"],
  
  "edge_side_panel": {
    "preferred_width": 400
  },
  
  "permissions": [
    "notifications",
    "background-sync",
    "periodic-background-sync"
  ],
  
  "background": {
    "service_worker": "sw.js",
    "type": "module"
  }
}